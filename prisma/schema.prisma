generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Incident {
  id          Int       @id @default(autoincrement())
  status      String
  description String
  openedBy    String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  resolvedAt  DateTime?
  canceledAt  DateTime?
  assignedTo  String?
  comment     String?
  priority    Int

  @@map("incidents")
}
